# Backend local development environment (NestJS)
# Copy to `backend/.env` and fill values.

# Database (local Postgres)
DATABASE_URL=postgresql://postgres:postgres@localhost:5434/ai_automation?schema=public

# Redis (optional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT
JWT_SECRET=replace-with-random-secret
JWT_EXPIRES_IN=7d

# Application
NODE_ENV=development
PORT=3001
API_PREFIX=api/v1

# Frontend origin for CORS/OAuth redirects
FRONTEND_URL=http://localhost:3000

# OAuth providers (optional in local dev)
GOOGLE_CLIENT_ID=replace-with-google-client-id
GOOGLE_CLIENT_SECRET=replace-with-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3001/api/v1/auth/google/callback

GITHUB_CLIENT_ID=replace-with-github-client-id
GITHUB_CLIENT_SECRET=replace-with-github-client-secret

GITHUB_CALLBACK_URL=http://localhost:3001/api/v1/auth/github/callback
