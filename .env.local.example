# Frontend local development environment (Next.js + NextAuth)
# Copy to `.env.local` and fill values.

# NextAuth (local frontend URL)
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=replace-with-random-secret

# Backend API (local backend URL)
NEXT_PUBLIC_API_URL=http://localhost:3001/api/v1
API_URL=http://localhost:3001/api/v1

# Optional OAuth for direct NextAuth provider flow
GOOGLE_CLIENT_ID=replace-with-google-client-id
GOOGLE_CLIENT_SECRET=replace-with-google-client-secret

GITHUB_ID=replace-with-github-client-id
GITHUB_SECRET=replace-with-github-client-secret


# Optional server-side helpers
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_SERVICE_ROLE_KEY=replace-with-supabase-service-role-key
